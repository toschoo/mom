suite:	$(TDIR)/registry \
	$(TDIR)/basic    \
        $(TDIR)/advanced \
        $(TDIR)/mem1

$(TDIR)/registry:	$(TDIR)/Common.hs $(TDIR)/registry.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

$(TDIR)/basic:	$(TDIR)/Common.hs $(TDIR)/basic.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

$(TDIR)/advanced:	$(TDIR)/Common.hs $(TDIR)/advanced.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

$(TDIR)/mem1:	$(TDIR)/Common.hs $(TDIR)/mem1.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

run:	suite
	stompserver -p61615 1>/dev/null 2>&1 &
	sleep 1
	$(TDIR)/registry 
	$(TDIR)/basic
	$(TDIR)/advanced
	test/suite/stopsrv.sh

prof-clean:
	mv -f ./*.prof  ./profiling/
	mv -f ./*.hp    ./profiling/
	mv -f ./*.ps    ./profiling/
	mv -f ./*.aux   ./profiling/

clean:
	rm -f $(TDIR)/*.hi
	rm -f $(TDIR)/*.o
	rm -f $(TDIR)/basic
	rm -f $(TDIR)/advanced
	rm -f $(TDIR)/mem1
	rm -f $(TDIR)/registry
	rm -f $(SMOKEDIR)/ping
	rm -f $(SMOKEDIR)/multi1
	rm -f $(SMOKEDIR)/demo1
	rm -f $(SMOKEDIR)/frost
	rm -f $(SMOKEDIR)/luke
	rm -f $(SMOKEDIR)/psend
	rm -f $(SMOKEDIR)/cl1
	rm -f $(SMOKEDIR)/conduit1
	rm -f $(SMOKEDIR)/client1
	rm -f $(SMOKEDIR)/push1
	rm -f $(SMOKEDIR)/sub1
	rm -f $(SMOKEDIR)/sub2
	rm -f $(SMOKEDIR)/sub3
	rm -f $(SMOKEDIR)/server1
	rm -f $(SMOKEDIR)/server2
	rm -f $(SMOKEDIR)/server3
	rm -f $(SMOKEDIR)/server4
	rm -f $(SMOKEDIR)/worker1
	rm -f $(SMOKEDIR)/worker2
	rm -f $(SMOKEDIR)/pub1
	rm -f $(SMOKEDIR)/pub2
	rm -f $(SMOKEDIR)/desk1
	rm -f $(SMOKEDIR)/bal1 
	rm -f $(SMOKEDIR)/router1
	rm -f $(SMOKEDIR)/fwd1 
	rm -f $(SMOKEDIR)/srb1 
	rm -f $(SMOKEDIR)/tsb1 
	rm -f $(SMOKEDIR)/deskcl1
	rm -f $(SMOKEDIR)/contx1
	rm -f $(SMOKEDIR)/*.hi
	rm -f $(SMOKEDIR)/*.o
	rm -rf log/

dist-clean:	clean
		cabal clean
		rm -f $(SUTDIR)/Patterns/*.hi
		rm -f $(SUTDIR)/Patterns/*.o
		rm -f test/bin/*.o
		rm -f test/bin/*.hi

build: $(tests) $(SUBSRC)
