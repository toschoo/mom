TDIR = test/suite
SDIR = ../test/samples
CFGDIR = ../test/cfg

SMOKEDIR = test/smoke

tests = $(TDIR)/tparser 

SUTDIR = Network/Mom/Stompl

CLIENT = Client

SUBSRC = $(SUTDIR)/Frame.hs \
         $(SUTDIR)/Parser.hs 

PKG = -package-db .cabal-sandbox/x86_64-linux-ghc-8.0.2-packages.conf.d

GHC = ghc
FLGS = -DTEST -Wall -O2 $(PKG) --make 
# -prof -auto-all -caf-all 
#-fforce-recomp
INC  = -i./test/src -i./Network/Mom/Stompl -i../broker/Network/Mom/Stompl

run:
	$(TDIR)/tparser ALL $(SDIR)

clean:
	rm -f $(TDIR)/*.hi
	rm -f $(TDIR)/*.o
	rm -f $(TDIR)/tframe
	rm -f $(TDIR)/tparser
	rm -f $(SMOKEDIR)/*.hi
	rm -f $(SMOKEDIR)/*.o
	rm -f $(SMOKEDIR)/esc
	rm -f $(SMOKEDIR)/parse

dist-clean:	clean
		cabal clean
		rm -f $(SUTDIR)/*.hi
		rm -f $(SUTDIR)/*.o
		rm -f test/bin/*.o
		rm -f test/bin/*.hi
		rm -f test/client/*.o
		rm -f test/client/*.hi

suite: $(tests) $(SUBSRC)


$(TDIR)/tframe:		$(TDIR)/tframe.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

$(TDIR)/tparser:	$(TDIR)/tparser.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

$(TDIR)/bench1:		$(TDIR)/bench1.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

$(SMOKEDIR)/esc:	$(SMOKEDIR)/esc.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@

$(SMOKEDIR)/parse:	$(SMOKEDIR)/parse.hs $(SUBSRC)
			$(GHC) $(FLGS) $(INC) $@


